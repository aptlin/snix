!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.antialias:  true
Xft.dpi:        227
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

Xcursor.size:   16
Xcursor.theme:  Adwaita

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.transparent: false
! URxvt.tintColor: {{ colorscheme["background"] }}
! 0 to 99 darkens, 101 to 200 lightens
! URxvt*.shading: 100
URxvt.loginShell: true
URxvt.saveLines: 10000
URxvt.internalBorder: 3
URxvt.lineSpace: 0

! Fonts
URxvt.allow_bold: true
URxvt.font:         xft:Hack-Regular:pixelsize=28
URxvt.boldFont:     xft:Hack-Bold:pixelsize=28:weight=bold
URxvt.italicFont:   xft:Hack-RegularOblique:pixelsize=28:slant=italic
! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollBar: false
!do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! Cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

!-------------------------------------------------------------------------------
! Rofi (application launcher)
!-------------------------------------------------------------------------------

! rofi.font:                  Fira Code 12 
! rofi.dpi:                   192 
! rofi.lines:                 8 
! rofi.width:                 16 
! rofi.opacity:               100 
! rofi.fake-transparency:     false
! rofi.bw:                    4
rofi.disable-history:       false
rofi.case-sensitive:        false
! Set lazy filter limit
rofi.lazy-filter-limit:     15000
! Row height (in chars)
rofi.eh:                    1
! Do a more fuzzy matching
rofi.fuzzy:                 false
! Use glob matching
rofi.glob:                  false
! Margin between rows
rofi.line-margin:           2

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
! Use extended color scheme
rofi.color-enabled:                  true
! Separator style (none, dash, solid)
rofi.separator-style:                solid

rofi.color-normal:                   {{ colorscheme["background"] }},{{ colorscheme["text"] }},{{ colorscheme["background-alt"] }},{{ colorscheme["selected"] }},{{ colorscheme["background"] }}
! Color scheme for urgent row
rofi.color-urgent:                   {{ colorscheme["background"] }},{{ colorscheme["red"] }},{{ colorscheme["background-alt"] }},{{ colorscheme["selected"] }},{{ colorscheme["red"] }}
! Color scheme for active row
rofi.color-active:                   {{ colorscheme["background"] }},{{ colorscheme["light gray"] }},{{ colorscheme["background-alt"] }},{{ colorscheme["selected"] }},{{ colorscheme["light gray"] }}
! Color scheme window
! background border color separator color/
rofi.color-window:                   {{ colorscheme["background-alt"] }},{{ colorscheme["background-alt"] }}

